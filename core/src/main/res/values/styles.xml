    <style name="mtg_toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/popupNew</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <!--<item name="colorControlNormal">@color/white</item>-->
    </style>

    <style name="mtg_toolbar.Transparent" parent="mtg_toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="colorControlNormal">?attr/colorOnSecondary</item>
        <item name="android:textColorSecondary">?attr/colorOnSecondary</item>
    </style>

    <style name="popupNew" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">?attr/backgroundColor</item>
    </style>

    <style name="CardsTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/colorPrimary</item>
        <item name="tabTextAppearance">@style/CardsTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="CardsTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="textAllCaps">false</item>
    </style>

