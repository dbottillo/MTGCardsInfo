<resources>

    <style name="App" />

    <style name="App.ToolbarTitle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="App.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/App.TabLayoutTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="App.TabLayoutTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

