<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:topRightRadius="@dimen/common_border_radius"
                android:bottomRightRadius="@dimen/common_border_radius" />
            <solid android:color="@color/btn_border_grey" />
        </shape>

    </item>
    <item
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners
                android:topRightRadius="@dimen/common_border_radius"
                android:bottomRightRadius="@dimen/common_border_radius" />
            <solid android:color="@color/btn_grey" />
        </shape>
    </item>
</layer-list>