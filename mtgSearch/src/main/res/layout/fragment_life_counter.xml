<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/life_counter_container"
    tools:context="com.dbottillo.lifecounter.LifeCounterActivity">

    <ListView
        android:id="@+id/life_counter_list"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:cacheColorHint="@android:color/transparent"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:id="@+id/life_counter_dice_scrolliew"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/life_counter_dice_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        style="@style/MTGProgressBar"
        android:id="@+id/progress" />

    <Button
        android:id="@+id/new_player"
        style="@style/FabButton"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="15dp"
        android:text="+" />

</RelativeLayout>
