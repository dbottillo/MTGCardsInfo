<resources>

    <style name="MTGProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:indeterminate">true</item>
        <item name="spb_color">@color/sub_main</item>
        <item name="spb_speed">1.2</item>
    </style>

    <style name="BtnLifeCounter">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/btn_life_counter_poison</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="BtnLifeCounter.Life">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="BtnLifeCounter.Poison">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="BtnGeneric">
        <item name="android:background">@drawable/btn_common</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="mtg_toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/color_primary</item>
        <item name="popupTheme">@style/popupNew</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="mtg_toolbar.Transparent" parent="mtg_toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="popupNew" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
    </style>


    <style name="EditTextWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <!-- bottom line color -->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- text color -->
        <item name="android:textColor">@android:color/white</item>
        <!-- hint text color -->
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="EditTextPrimary" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <!-- bottom line color -->
        <item name="colorControlNormal">@color/color_primary</item>
        <!-- text color -->
        <item name="android:textColor">@color/color_primary</item>
        <!-- hint text color -->
        <item name="android:textColorHint">@color/color_primary</item>
    </style>

    <style name="MTGTextInputLayout" parent="Widget.Design.TextInputLayout"/>

    <style name="MTGTextInputLayout.Search">
        <item name="hintTextAppearance">@style/MTGTextAppearance</item>
    </style>

    <style name="MTGTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/mtg_red</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20sp</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="SearchForm" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

</resources>
