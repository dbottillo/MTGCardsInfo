<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dbottillo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".base.MTGApp"
        android:theme="@style/MTGSearchTheme" >
        <activity
            android:name=".common.MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/MTGSearchTheme.ActionBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <activity
            android:name=".common.CardsActivity"
            android:theme="@style/MTGSearchTheme.ActionBar">
        </activity>

        <activity
            android:name=".common.SavedActivity"
            android:theme="@style/MTGSearchTheme.ActionBar" >
        </activity>

        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data android:name="com.crashlytics.ApiKey" android:value="f2c7b2dc347786aa1e01b4ca437f2f8dd05d59d8"/>
    </application>


</manifest>
