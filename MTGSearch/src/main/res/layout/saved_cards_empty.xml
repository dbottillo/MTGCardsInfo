<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/empty_saved_cards_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="140dp"
    android:orientation="vertical"
    tools:background="@color/white">

    <TextView
        android:id="@+id/empty_cards_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="40dp"
        android:paddingTop="20dp"
        android:text="@string/empty_saved"
        android:textColor="@color/color_primary"
        android:textStyle="italic"
        android:visibility="visible" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_list_footer_add">

        <Button
            android:id="@+id/empty_cards_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/action_search"
            style="@style/FooterBtn" />

    </FrameLayout>
</LinearLayout>
