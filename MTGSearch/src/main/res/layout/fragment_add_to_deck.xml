<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              style="@style/MTGSearchTheme"
              android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/add_to_deck_title"
        android:textColor="@color/color_primary"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_primary" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/new_deck_name_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:theme="@style/EditTextPrimary"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/new_deck_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_deck_hint"
            android:inputType="textPersonName|textCapWords"
            android:textColor="@color/color_primary"
            android:theme="@style/EditTextPrimary" />
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/choose_deck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/new_deck_quantity_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:theme="@style/EditTextPrimary"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/new_deck_quantity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_deck_quantity_hint"
            android:inputType="number"
            android:textColor="@color/color_primary"
            android:theme="@style/EditTextPrimary" />
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/choose_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/add_to_deck_sideboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/color_primary"
        android:layout_gravity="center"
        android:text="@string/sideboard"
        tools:ignore="UnusedAttribute" />

    <Button
        android:id="@+id/add_to_deck_save"
        style="@style/BtnGeneric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:minWidth="300dp"
        android:text="@string/Save" />

</LinearLayout>
