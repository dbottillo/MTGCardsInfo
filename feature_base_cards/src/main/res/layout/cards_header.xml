<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        style="@style/BigTitle"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="0dp"
        android:layout_toLeftOf="@+id/cards_settings"
        android:textSize="32sp"
        tools:layout_height="wrap_content"
        tools:layout_width="wrap_content"
        tools:text="Duel Decks: Ravinca vs Guild"/>

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toLeftOf="@+id/cards_settings"
        android:layout_marginLeft="8dp"
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        tools:text="WUBRG - AL - CUMR"/>

    <ImageButton
        android:id="@+id/cards_view_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/cd_cards_view_type"
        android:src="@drawable/cards_list_type"
        android:tint="@color/color_primary"/>

    <ImageButton
        android:id="@+id/cards_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/cards_view_type"
        android:background="@android:color/transparent"
        android:contentDescription="@string/cd_filter"
        android:padding="8dp"
        app:srcCompat="@drawable/filter"
        android:tint="@color/color_primary"/>

</RelativeLayout>