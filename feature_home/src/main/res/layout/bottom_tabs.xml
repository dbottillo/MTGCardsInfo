<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_tabs_height"
    android:orientation="vertical"
    tools:background="?attr/colorSurface"
    tools:orientation="horizontal"
    tools:parentTag="android.widget.LinearLayout">

    <LinearLayout
        android:id="@+id/home_tab"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_tabs_height"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/home_tab_image"
            android:layout_width="@dimen/bottom_tabs_icon_size"
            android:layout_height="@dimen/bottom_tabs_icon_size"
            android:layout_gravity="center"
            android:contentDescription="@string/action_home"
            android:src="@drawable/left_home"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/action_home"
            android:textSize="@dimen/bottom_tabs_text_size"
            android:textColor="?attr/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/decks_tab"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_tabs_height"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/decks_tab_image"
            android:layout_width="@dimen/bottom_tabs_icon_size"
            android:layout_height="@dimen/bottom_tabs_icon_size"
            android:layout_gravity="center"
            android:contentDescription="@string/action_decks"
            android:src="@drawable/deck"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/action_decks"
            android:textSize="@dimen/bottom_tabs_text_size"
            android:textColor="?attr/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/saved_tab"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_tabs_height"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/saved_tab_image"
            android:layout_width="@dimen/bottom_tabs_icon_size"
            android:layout_height="@dimen/bottom_tabs_icon_size"
            android:layout_gravity="center"
            android:contentDescription="@string/action_saved"
            android:src="@drawable/left_saved"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/action_saved"
            android:textSize="@dimen/bottom_tabs_text_size"
            android:textColor="?attr/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/life_counter_tab"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_tabs_height"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/life_counter_tab_image"
            android:layout_width="@dimen/bottom_tabs_icon_size"
            android:layout_height="@dimen/bottom_tabs_icon_size"
            android:layout_gravity="center"
            android:contentDescription="@string/action_life_counter"
            android:src="@drawable/left_life_counter"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/action_life_counter"
            android:textSize="@dimen/bottom_tabs_text_size"
            android:textColor="?attr/colorPrimary" />
    </LinearLayout>

</merge>